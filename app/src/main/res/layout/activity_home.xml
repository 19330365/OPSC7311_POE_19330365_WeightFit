<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".Home">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/black"
        android:text="Logout"
        android:onClick="logout"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/p_profile"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="82dp" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="179dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivExercises"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_margin="40dp"
            app:srcCompat="@drawable/exercises1" />

        <ImageView
            android:id="@+id/ivDietary"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/weight_loss" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="179dp"
        android:layout_margin="40dp">


        <ImageButton
            android:id="@+id/ivDiary"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/food_diary" />


    </LinearLayout>

    </LinearLayout>